<header>
  <div class="header-content">
    <a href="/" class="logo">
      <img src="/assets/navbar-logo.svg"
        data-png-fallback="/assets/navbar-logo.png"
        alt="sched.do" />
    </a>

    <nav>
      <ul>
        <% if current_user.yammer_user? %>
          <li>
            <span class="user-name">
              Hi, <em><%= current_user.name %>!</em>
            </span>
          </li>
          <li>
            <span class="user-avatar">
              <div class="avatar" style="background-image: url(<%= current_user.image %>)"></div>
            </span>
          </li>
          <li>
            <%= link_to 'Create Poll',
              new_event_path,
              id: "new-event",
              class: "create-poll" %>
          </li>
        <% else %>
          <li>
            <%= link_to 'Create Poll',
              "#sign-in-modal",
              id: "new-event",
              name: "sign-in-modal" %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>

<%= render 'shared/flashes' -%>
